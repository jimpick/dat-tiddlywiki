\define .op-place()
<$macrocall $name=".if"
  cond="""$(op-name)$"""
  then="<<.place '$(op-name)$'>> = "
  else=""/>
\end

\define .op-row()
<$macrocall $name=".if"
  cond="""$(op-body)$"""
  then="""<tr><th align="left">$(op-head)$</th><td><<.op-place>>$(op-body)$</td></tr>"""
  else=""/>
\end

